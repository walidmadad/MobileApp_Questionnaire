<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulaire">

    <ScrollView
        android:layout_width="959dp"
        android:layout_height="595dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bjrView"
                    android:layout_width="795dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Bonjour " />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="30dp"
                android:text="Formulaire de questions"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Madame, Monsieur, Veuillez cochez la case correspondante à vos réponses."
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="I. Mieux vous connaitre "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="713dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="1) Êtes-vous :"
                android:textSize="20sp" />


            <RadioGroup
                android:id="@+id/genderGroupe"
                android:layout_width="482dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="240dp"
                android:layout_marginTop="20dp">

                    <RadioButton
                        android:id="@+id/Homme"
                        android:layout_width="122dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="16dp"
                        android:text="Homme" />

                    <RadioButton
                        android:id="@+id/Femme"
                        android:layout_width="122dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="28dp"
                        android:text="Femme" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="703dp"
                android:layout_height="31dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="2) Dans quelle tranche d’âge vous situez vous ?"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/ageGroupe"
                android:layout_width="483dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="288dp"
                android:layout_marginTop="20dp">

                        <RadioButton

                            android:layout_width="138dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entre 16 et 25 ans" />

                        <RadioButton

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entre 26 et 35 ans" />



                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entre 36 et 45 ans" />

                        <RadioButton

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entre 46 ans et plus " />

            </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="3) Dans quelle ville vous vous situez"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ville"
                android:layout_width="674dp"
                android:layout_height="40dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="4) Quelle est votre activité ? "
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/activitegroupe"
                android:layout_width="452dp"
                android:layout_height="match_parent"
                android:layout_marginStart="288dp"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/Lyceen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lycéen" />

                <RadioButton
                    android:id="@+id/Etudiant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Etudiant" />

                <RadioButton
                    android:id="@+id/Chomage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chômage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </RadioGroup>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="5) Quel est votre dernier diplôme obtenu ?"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtDiplome"
                android:layout_width="668dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:text="6) Avez-vous d’autre diplôme ? (Autre que scolaire)" />

            <RadioGroup
                android:layout_height="match_parent"
                android:layout_width="452dp"
                android:layout_marginStart="288dp"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/oui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oui" />

                <RadioButton
                    android:id="@+id/non"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:text="II. Plus d’information " />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:text="7) Quel domaine d’activité vous intéresse ? " />

            <Button
                android:id="@+id/btn_valider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="440dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="100dp"
                android:text="Valider" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>